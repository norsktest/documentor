{
    "name": "@norsktest/documentor",
    "version": "1.0.0",
    "description": "A Svelte component to create beautiful documentation websites.",
    "author": "NorskTest",
    "license": "MIT",
    "homepage": "https://github.com/norsktest/documentor",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/norsktest/documentor.git"
    },
    "scripts": {
        "dev": "vite dev",
        "build": "vite build && npm run package",
        "preview": "vite preview",
        "package": "svelte-kit sync && svelte-package && publint",
        "prepublishOnly": "npm run package",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "test": "vitest run --coverage",
        "format": "prettier --write .",
        "lint": "eslint ."
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "svelte": "./dist/index.ts"
        }
    },
    "files": [
        "dist",
        "!dist/**/*.test.*",
        "!dist/**/*.spec.*"
    ],
    "peerDependencies": {
        "svelte": "^5.0.0-next.262"
    },
    "devDependencies": {
        "@modyfi/vite-plugin-yaml": "^1.1.0",
        "@sveltejs/adapter-auto": "^3.2.5",
        "@sveltejs/kit": "^2.6.2",
        "@sveltejs/package": "^2.3.5",
        "@sveltejs/vite-plugin-svelte": "4.0.0-next.7",
        "@tailwindcss/typography": "^0.5.14",
        "@types/eslint": "^9.6.1",
        "@vitest/coverage-v8": "2.1.2",
        "autoprefixer": "^10.4.20",
        "eslint": "^9.12.0",
        "eslint-plugin-svelte": "^2.44.1",
        "globals": "^15.10.0",
        "prettier": "^3.3.3",
        "prettier-plugin-tailwindcss": "^0.6.8",
        "publint": "^0.2.11",
        "sass-embedded": "^1.79.4",
        "svelte": "5.0.0-next.262",
        "svelte-check": "^4.0.4",
        "tailwindcss": "^3.4.9",
        "typescript": "^5.6.2",
        "typescript-eslint": "^8.8.0",
        "vite": "^5.4.8",
        "vitest": "^2.1.2"
    },
    "svelte": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "type": "module",
    "dependencies": {
        "bits-ui": "^0.21.16",
        "clsx": "^2.1.1",
        "highlight.js": "^11.10.0",
        "lucide-svelte": "^0.447.0",
        "paneforge": "^0.0.6",
        "showdown": "^2.1.0",
        "tailwind-merge": "^2.5.3",
        "tailwind-variants": "^0.2.1"
    }
}
